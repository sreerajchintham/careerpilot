# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# OpenAI Configuration (optional - for embeddings)
OPENAI_API_KEY=your_openai_api_key

# Google Gemini Configuration (required for AI agent)
GEMINI_API_KEY=your_gemini_api_key

# LinkedIn Credentials (optional - for LinkedIn automation)
LINKEDIN_EMAIL=your_linkedin_email
LINKEDIN_PASSWORD=your_linkedin_password

# Jobright.ai Credentials (optional - for Jobright automation)
JOBRIGHT_EMAIL=your_jobright_email
JOBRIGHT_PASSWORD=your_jobright_password

# Worker Configuration
WORKER_HEADLESS=false  # Set to true for headless browser mode
WORKER_MAX_APPLICATIONS_PER_RUN=5  # Max applications to process per run
WORKER_INTERVAL=3600  # Interval in seconds for continuous mode (1 hour)
WORKER_RATE_LIMIT=10  # Max applications per hour

# Application Settings
AUTO_APPLY_ENABLED=false  # Set to true to enable automatic submission
REQUIRE_MANUAL_REVIEW=true  # Require manual review before submitting
MIN_MATCH_SCORE=70  # Minimum match score (0-100) to auto-apply

# Notification Settings (optional)
NOTIFICATION_EMAIL=your_notification_email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
